<Window x:Class="MPI_CustomMVVM_WPF.Views.NewROWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPI_CustomMVVM_WPF.Views"
        mc:Ignorable="d"
        Title="NewROWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" x:Name="NewROTabControl" TabStripPlacement="Left" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Vehicle Data" >
                <ContentControl x:Name="NewRO_Vehicle_Content_View"/>
            </TabItem>
            <TabItem Header="Owner Data">
                <ContentControl x:Name="NewRo_Owner_Content_View"/>
            </TabItem>
            <TabItem Header="Repairs">
                <ContentControl x:Name="NewRo_Repair_Content_View"/>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" x:Name="FinishRO"
                Click="FinishRO_Click">
            Complete RO
        </Button>
    </Grid>
</Window>
